{
  "name": "hapi-web-boilerplate",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "build:css": "bin/build-css",
    "build": "bin/build",
    "lint": "standard",
    "pretest": "npm run lint",
    "test": "export $(cat .env | xargs) && NODE_ENV=test node --experimental-vm-modules ./node_modules/.bin/jest test --collect-coverage",
    "test:ci": "NODE_ENV=test node --experimental-vm-modules ./node_modules/.bin/jest test --collect-coverage",
    "testcafe": "testcafe chrome test/e2e-tests/e2e-tests.js",
    "testcafe:ci": "testcafe chrome:headless test/e2e-tests/e2e-tests.js",
    "postinstall": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.4.0",
    "@hapi/inert": "^7.1.0",
    "@hapi/log": "^2.0.1",
    "@hapi/vision": "^7.0.3",
    "blipp": "^4.0.2",
    "govuk-frontend": "^5.9.0",
    "joi": "^17.13.3",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "sass": "^1.85.1",
    "standard": "^17.1.2"
  }
